<Page
    x:Class="MyWarehouse.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyWarehouse.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left menu  -->
        <StackPanel Grid.Column="0" Background="#FF2B3945">
            <StackPanel Margin="12" VerticalAlignment="Top">
                <Viewbox
                    Width="90"
                    Height="90"
                    Margin="0,6,0,8"
                    HorizontalAlignment="Center">
                    <Canvas Width="100" Height="100">
                        <Path
                            Data="M10,40 L50,10 L90,40 L90,85 L10,85 Z"
                            Fill="#FFECB365"
                            Stroke="#FFB77A1A"
                            StrokeThickness="2" />
                        <Rectangle
                            Canvas.Left="24"
                            Canvas.Top="48"
                            Width="16"
                            Height="28"
                            Fill="#FFF2C07E"
                            Stroke="#FFB77A1A" />
                        <Rectangle
                            Canvas.Left="44"
                            Canvas.Top="48"
                            Width="16"
                            Height="28"
                            Fill="#FFF2C07E"
                            Stroke="#FFB77A1A" />
                        <Rectangle
                            Canvas.Left="64"
                            Canvas.Top="48"
                            Width="16"
                            Height="28"
                            Fill="#FFF2C07E"
                            Stroke="#FFB77A1A" />
                    </Canvas>
                </Viewbox>

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Управление складом"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Separator Margin="0,8,0,8" />

                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Tasks_Click"
                    Content="Задачи" />
                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Products_Click"
                    Content="Товары" />
                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Clients_Click"
                    Content="Клиенты" />
                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Stocks_Click"
                    Content="Склады / Запасы" />

                <Button
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="AdminPanel_Click"
                    Content="Админ панель" />


                <StackPanel Margin="0,16,0,0" VerticalAlignment="Bottom">
                    <TextBlock
                        FontSize="12"
                        Foreground="#FFC6D0DA"
                        Text="Текущий пользователь:" />
                    <TextBlock
                        x:Name="UserFirstNameTextBlock"
                        FontSize="13"
                        FontWeight="Bold"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!--  Main content: use Frame to host Pages  -->
        <StackPanel Grid.Column="1" d:Background="#F1F1F1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </StackPanel>

    </Grid>
</Page>
