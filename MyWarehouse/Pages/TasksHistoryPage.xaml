<Page
    x:Class="MyWarehouse.Pages.TasksHistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyWarehouse.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TasksHistoryPage"
    d:Background="#FFF7F8FA"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <DockPanel
            Grid.Row="0"
            Margin="0,0,0,8"
            LastChildFill="True">
            <TextBlock
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                Text="История задач" />

            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="BackButton"
                    Margin="8,0,0,0"
                    Click="BackButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    Назад
                </Button>
            </StackPanel>
        </DockPanel>

        <!--  Список задач  -->
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl
                x:Name="TasksPanel"
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel
                            Margin="-4"
                            ItemWidth="370"
                            Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="4" Style="{StaticResource MaterialDesignOutlinedCard}">
                            <Grid Margin="10">
                                <StackPanel>
                                    <!--  Заголовок  -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Название товара  -->
                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                                            Text="{Binding ProductName}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />

                                        <!--  Статус  -->
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            Foreground="{Binding StatusColor}"
                                            Text="{Binding TaskStatusName}" />
                                    </Grid>

                                    <!--  Детали  -->
                                    <StackPanel Margin="0,8,0,0">
                                        <TextBlock Foreground="Gray" Style="{StaticResource MaterialDesignBody2TextBlock}">
                                            <Run Text="Клиент: " />
                                            <Run Text="{Binding ClientName}" />
                                        </TextBlock>

                                        <TextBlock
                                            Foreground="Gray"
                                            Style="{StaticResource MaterialDesignBody2TextBlock}"
                                            Visibility="{Binding HasExecutor, Converter={StaticResource BoolToVis}}">
                                            <Run Text="Исполнитель: " />
                                            <Run Text="{Binding ExecutorName}" />
                                        </TextBlock>

                                        <TextBlock
                                            Foreground="Gray"
                                            Style="{StaticResource MaterialDesignBody2TextBlock}"
                                            Visibility="{Binding HasFromLocation, Converter={StaticResource BoolToVis}}">
                                            <Run Text="Откуда: " />
                                            <Run Text="{Binding FromLocationName}" />
                                        </TextBlock>

                                        <TextBlock
                                            Foreground="Gray"
                                            Style="{StaticResource MaterialDesignBody2TextBlock}"
                                            Visibility="{Binding HasToLocation, Converter={StaticResource BoolToVis}}">
                                            <Run Text="Куда: " />
                                            <Run Text="{Binding ToLocationName}" />
                                        </TextBlock>

                                        <TextBlock Foreground="Gray" Style="{StaticResource MaterialDesignBody2TextBlock}">
                                            <Run Text="Тип доставки: " />
                                            <Run Text="{Binding DeliveryTypeName}" />
                                        </TextBlock>

                                        <TextBlock Foreground="Gray" Style="{StaticResource MaterialDesignBody2TextBlock}">
                                            <Run Text="Количество: " />
                                            <Run FontWeight="SemiBold" Text="{Binding Quantity}" />
                                        </TextBlock>

                                        <TextBlock Foreground="Gray" Style="{StaticResource MaterialDesignBody2TextBlock}">
                                            <Run Text="Создано: " />
                                            <Run Text="{Binding CreatedAt, StringFormat={}{0:g}}" />
                                        </TextBlock>

                                        <TextBlock
                                            Foreground="Gray"
                                            Style="{StaticResource MaterialDesignBody2TextBlock}"
                                            Visibility="{Binding HasCompletedAt, Converter={StaticResource BoolToVis}}">
                                            <Run Text="Завершено: " />
                                            <Run Text="{Binding CompletedAt, StringFormat={}{0:g}}" />
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>