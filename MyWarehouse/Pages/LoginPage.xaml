<Page
    x:Class="MyWarehouse.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyWarehouse.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#FF2B3945">
            <StackPanel
                Margin="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Viewbox
                    Width="120"
                    Height="120"
                    Margin="0,0,0,16">
                    <Canvas Width="100" Height="100">
                        <Path
                            Data="M10,40 L50,10 L90,40 L90,85 L10,85 Z"
                            Fill="#FFECB365"
                            Stroke="#FFB77A1A"
                            StrokeThickness="2" />
                        <Rectangle
                            Canvas.Left="24"
                            Canvas.Top="48"
                            Width="16"
                            Height="28"
                            Fill="#FFF2C07E"
                            Stroke="#FFB77A1A" />
                        <Rectangle
                            Canvas.Left="44"
                            Canvas.Top="48"
                            Width="16"
                            Height="28"
                            Fill="#FFF2C07E"
                            Stroke="#FFB77A1A" />
                        <Rectangle
                            Canvas.Left="64"
                            Canvas.Top="48"
                            Width="16"
                            Height="28"
                            Fill="#FFF2C07E"
                            Stroke="#FFB77A1A" />
                    </Canvas>
                </Viewbox>

                <TextBlock
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="Управление складом" />
                <TextBlock
                    Margin="0,6,0,0"
                    HorizontalAlignment="Center"
                    Foreground="#FFC6D0DA"
                    Style="{StaticResource MaterialDesignCaptionTextBlock}"
                    Text="Учёт • Приём • Отгрузка" />
            </StackPanel>
        </Grid>

        <Border Grid.Column="1" d:Background="#F1F1F1">
            <Grid Margin="24" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Style="{StaticResource MaterialDesignHeadline6TextBlock}" Text="Вход в систему" />
                    <TextBlock
                        Margin="0,4,0,0"
                        Style="{StaticResource MaterialDesignHelperTextBlock}"
                        Text="Введите учётные данные для доступа к записям склада" />
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Top">

                    <TextBlock Margin="0,6,0,4" Text="Логин" />
                    <TextBox
                        x:Name="LoginBox"
                        Height="34"
                        FontSize="14" />

                    <TextBlock Margin="0,12,0,4" Text="Пароль" />
                    <PasswordBox
                        x:Name="PasswordBox"
                        Height="34"
                        FontSize="14" />

                    <TextBlock
                        x:Name="ErrorTextBlock"
                        Margin="0,10,0,0"
                        Foreground="#FFD32F2F"
                        Visibility="Collapsed" />

                    <Button
                        x:Name="LoginButton"
                        Margin="0,12,0,0"
                        Click="LoginButton_Click"
                        Content="Войти"
                        IsDefault="True" />

                    <StackPanel
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Style="{StaticResource MaterialDesignBodySmallTextBlock}" Text="Версия" />
                        <TextBlock
                            FontWeight="SemiBold"
                            Style="{StaticResource MaterialDesignBodySmallTextBlock}"
                            Text=" 1.0.0" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
