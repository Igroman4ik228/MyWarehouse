<Page
    x:Class="MyWarehouse.Pages.LocationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyWarehouse.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LocationsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <Style x:Key="ReadOnlyTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="EditableTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style
            x:Key="NumericTextBoxStyle"
            BasedOn="{StaticResource EditableTextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <DockPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock
                DockPanel.Dock="Left"
                FontSize="20"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                Text="Локации" />

            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal">

                <Button
                    x:Name="AddButton"
                    Margin="8,0,0,0"
                    Click="AddButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="Добавить новую локацию">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            Kind="Plus" />
                        <TextBlock Text="Добавить" />
                    </StackPanel>
                </Button>

                <Button
                    x:Name="SaveButton"
                    Margin="8,0,0,0"
                    Click="SaveButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    ToolTip="Сохранить изменения">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            Kind="ContentSave" />
                        <TextBlock Text="Сохранить" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!--  DataGrid  -->
        <DataGrid
            x:Name="LocationsDataGrid"
            Grid.Row="1"
            materialDesign:DataGridAssist.CellPadding="13,8,12,8"
            materialDesign:DataGridAssist.ColumnHeaderPadding="8"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CellEditEnding="LocationsDataGrid_CellEditEnding"
            IsReadOnly="True"
            ItemsSource="{Binding Locations}"
            SelectionMode="Single"
            SelectionUnit="FullRow">

            <DataGrid.Columns>
                <!--  ID Column  -->
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding IdLocation}"
                    Header="ID"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Zone Column  -->
                <DataGridTemplateColumn Width="1.5*" Header="Зона">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Zone}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding Zone}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="Введите зону"
                                MaxLength="50"
                                Style="{StaticResource EditableTextBoxStyle}"
                                Text="{Binding Zone, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!--  Shelf Column  -->
                <DataGridTemplateColumn Width="1.5*" Header="Полка">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Shelf}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding Shelf}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="Введите полку"
                                MaxLength="50"
                                Style="{StaticResource EditableTextBoxStyle}"
                                Text="{Binding Shelf, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!--  Cell Column  -->
                <DataGridTemplateColumn Width="1.5*" Header="Ячейка">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding Cell}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding Cell}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="Введите ячейку"
                                MaxLength="50"
                                Style="{StaticResource EditableTextBoxStyle}"
                                Text="{Binding Cell, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!--  Max Dimensions Columns  -->
                <DataGridTemplateColumn Width="1*" Header="Макс. длина">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Right"
                                Text="{Binding MaxLength, StringFormat=N2}"
                                ToolTip="{Binding MaxLength, StringFormat=N2}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="0.00"
                                Style="{StaticResource NumericTextBoxStyle}"
                                Text="{Binding MaxLength, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="1*" Header="Макс. ширина">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Right"
                                Text="{Binding MaxWidth, StringFormat=N2}"
                                ToolTip="{Binding MaxWidth, StringFormat=N2}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="0.00"
                                Style="{StaticResource NumericTextBoxStyle}"
                                Text="{Binding MaxWidth, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="1*" Header="Макс. высота">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Right"
                                Text="{Binding MaxHeight, StringFormat=N2}"
                                ToolTip="{Binding MaxHeight, StringFormat=N2}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="0.00"
                                Style="{StaticResource NumericTextBoxStyle}"
                                Text="{Binding MaxHeight, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="1*" Header="Макс. вес">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Right"
                                Text="{Binding MaxWeight, StringFormat=N2}"
                                ToolTip="{Binding MaxWeight, StringFormat=N2}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox
                                materialDesign:HintAssist.Hint="0.00"
                                Style="{StaticResource NumericTextBoxStyle}"
                                Text="{Binding MaxWeight, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!--  Display Name Column (Read-only)  -->
                <DataGridTemplateColumn
                    Width="2*"
                    Header="Отображаемое имя"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                FontStyle="Italic"
                                Text="{Binding DisplayName}"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding DisplayName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Actions Column  -->
                <DataGridTemplateColumn
                    x:Name="ActionsDataGridTemplateColumn"
                    Width="Auto"
                    Header="Действия"
                    Visibility="Collapsed">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    x:Name="DeleteButton"
                                    Margin="2"
                                    Click="DeleteButton_Click"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Удалить">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="2"
                                    Click="SaveRowButton_Click"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Сохранить строку">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Kind="Check" />
                                </Button>
                                <Button
                                    Margin="2"
                                    Click="CancelEditButton_Click"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Отменить редактирование">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Kind="Close" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Margin="0,8,0,0"
            Background="{DynamicResource MaterialDesignCardBackground}"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="StatusTextBlock"
                    Grid.Column="0"
                    Margin="8,4"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Text="Готово"
                    TextTrimming="CharacterEllipsis" />

                <TextBlock
                    Grid.Column="1"
                    Margin="8,4"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    Text="{Binding ElementName=LocationsDataGrid, Path=Items.Count, StringFormat={}Всего локаций: {0}}" />
            </Grid>
        </Border>
    </Grid>
</Page>