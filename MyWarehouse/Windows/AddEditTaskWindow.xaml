<Window
    x:Class="MyWarehouse.Windows.AddEditTaskWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyWarehouse.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MyWarehouse.ViewModels"
    Title="Добавить/Изменить задачу"
    Width="500"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Заголовок  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,16"
            FontSize="20"
            FontWeight="Bold"
            Style="{StaticResource MaterialDesignHeadlineSmallTextBlock}"
            Text="Добавление / редактирование задачи" />

        <!--  Клиент  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,6"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Клиент:" />
            <ComboBox
                Width="280"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Clients}"
                SelectedItem="{Binding SelectedClient, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Продукт  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,6"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Продукт:" />
            <ComboBox
                Width="280"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Products}"
                SelectedItem="{Binding SelectedProduct, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Тип доставки  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,0,0,6"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Тип доставки:" />
            <ComboBox
                Width="280"
                DisplayMemberPath="Name"
                ItemsSource="{Binding DeliveryTypes}"
                SelectedItem="{Binding SelectedDeliveryType, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Откуда  -->
        <StackPanel
            Grid.Row="4"
            Margin="0,0,0,6"
            Orientation="Horizontal"
            Visibility="{Binding IsFromLocationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Откуда:" />
            <ComboBox
                Width="280"
                ItemsSource="{Binding Locations}"
                SelectedItem="{Binding SelectedFromLocation, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!--  Куда  -->
        <StackPanel
            Grid.Row="5"
            Margin="0,0,0,6"
            Orientation="Horizontal"
            Visibility="{Binding IsToLocationVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Куда:" />
            <ComboBox
                Width="280"
                ItemsSource="{Binding Locations}"
                SelectedItem="{Binding SelectedToLocation, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!--  Количество  -->
        <StackPanel
            Grid.Row="7"
            Margin="0,0,0,6"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Количество:" />
            <TextBox
                Width="280"
                materialDesign:HintAssist.Hint="Введите число"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="{Binding QuantityText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Информация о максимальном количестве  -->
        <StackPanel
            Grid.Row="8"
            Margin="0,0,0,6"
            Orientation="Horizontal">
            <TextBlock
                Width="100"
                VerticalAlignment="Center"
                Text="Информация:" />
            <TextBlock
                Width="280"
                VerticalAlignment="Center"
                FontStyle="Italic"
                Foreground="Gray"
                Text="{Binding MaxQuantityInfo}"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="9"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="CancelButton"
                Margin="0,0,10,0"
                Click="CancelButton_Click"
                Content="Отмена"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button
                x:Name="SaveButton"
                Click="SaveButton_Click"
                Content="Сохранить"
                IsEnabled="{Binding IsFormValid}"
                Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>